<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.OrdersActivity">

    <TextView
        android:id="@+id/textOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:text="Нет актиыных заказов"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonOrderDelvired"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:onClick="onCompleteBtnClick"
        android:text="Заказ достален"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/textOrder"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="@+id/textOrder"
        app:layout_constraintTop_toBottomOf="@+id/textOrder" />

    <Button
        android:id="@+id/button2"
        android:layout_width="199dp"
        android:layout_height="51dp"
        android:layout_marginTop="32dp"
        android:onClick="onRefreshBtnClick"
        android:text="Обновить"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/buttonOrderDelvired"
        app:layout_constraintStart_toStartOf="@+id/buttonOrderDelvired"
        app:layout_constraintTop_toBottomOf="@+id/buttonOrderDelvired" />

    <Button
        android:id="@+id/button3"
        android:layout_width="206dp"
        android:layout_height="49dp"
        android:layout_marginBottom="32dp"
        android:onClick="onLogoutBtnClick"
        android:text="Выйти"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/button2"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toStartOf="@+id/button2" />

</androidx.constraintlayout.widget.ConstraintLayout>